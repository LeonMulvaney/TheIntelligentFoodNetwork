<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.ncirl.a14445618.theintelligentfoodnetwork.FavouriteRecipes"
    android:orientation="vertical"
    android:id="@+id/favouriteRecipesLinearLayout">

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_heart_icon"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Favourite Recipes"
                android:layout_gravity="center"
                android:gravity="left"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/favouriteRecipeCountTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="left"
                android:padding="5dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="5dp"/>


    <!--GridView From: https://www.raywenderlich.com/127544/android-gridview-getting-started -->
    <GridView
        android:id="@+id/favouriteRecipesGrid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"
        android:layout_margin="5dp"></GridView>
</LinearLayout>
