<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.ncirl.a14445618.theintelligentfoodnetwork.FavouriteRecipes"
    android:orientation="vertical"
    android:id="@+id/favouriteRecipesLinearLayout">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Favourite Recipes"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:textColor="@color/black"/>

    <!--GridView From: https://www.raywenderlich.com/127544/android-gridview-getting-started -->
    <GridView
        android:id="@+id/favouriteRecipesGrid"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:numColumns="auto_fit"
        android:horizontalSpacing="5dp"
        android:verticalSpacing="5dp"></GridView>
</LinearLayout>
