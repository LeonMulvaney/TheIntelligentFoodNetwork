<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.ncirl.a14445618.theintelligentfoodnetwork.FoodContents"
    android:orientation="vertical"
    android:id="@+id/foodContentsLayout">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/filterTitle"
                    android:layout_marginTop="15dp"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Filter:"
                    android:textSize="16sp"></TextView>

                <Spinner
                    android:id="@+id/filterByCategorySpinner"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="300dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"></Spinner>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"/>

            </LinearLayout>
            </android.support.v7.widget.CardView>

        <GridView
            android:id="@+id/recipesListView"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:horizontalSpacing="5dp"
            android:verticalSpacing="5dp"
            android:numColumns="2"
            android:layout_margin="5dp">
        </GridView>

    </LinearLayout>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>
</android.support.v4.widget.DrawerLayout>
