<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.ncirl.a14445618.theintelligentfoodnetwork.RecipeDetails"
    android:orientation="vertical"
    android:id="@+id/recipeDetailsLayout">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
    >
                        <ImageView
                            android:id="@+id/recipeImage"
                            android:layout_width="fill_parent"
                            android:layout_height="200dp"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"/>

                        <TextView
                            android:id="@+id/recipeTitle"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Recipe Title"
                            android:gravity="center_vertical"
                            android:textColor="@color/colorPrimary"
                            android:textAlignment="center"
                            android:textSize="16dp"
                            android:padding="20dp"/>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <!--Start -->
                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="100dp">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_servings_icon"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/servingsTv"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:text="4"
                                android:textAlignment="center"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:text="@string/serving"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_ww_smart_points"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/wwSmartPointsTv"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:text="22"
                                android:textAlignment="center"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:text="@string/ww_smart_points"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="15dp">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_prep_time_icon"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/preparationTv"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:text="10"
                                android:textAlignment="center"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:text="@string/preparation"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_cook_time_icon"
                                android:layout_gravity="center"/>

                            <TextView
                                android:id="@+id/cookTimeTv"
                                android:layout_width="fill_parent"
                                android:layout_height="30dp"
                                android:text="30"
                                android:textAlignment="center"
                                android:textSize="25dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="40dp"
                                android:text="@string/cook_time"
                                android:textAlignment="center"
                                android:layout_gravity="center"
                                android:textColor="@color/black"/>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                </android.support.v7.widget.CardView>
                <!-- End of Main Linear Layout -->

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/ingredientIv"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_ingredients_icon"
                                android:padding="5dp"/>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="35dp"
                                android:text="@string/ingredients"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_toRightOf="@id/ingredientIv"
                                android:gravity="center_vertical"/>

                        </RelativeLayout>


                        <ie.ncirl.a14445618.theintelligentfoodnetwork.NonScrollListView
                            android:id="@+id/ingredientLv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:dividerHeight="0dp"
                            android:layout_marginBottom="15dp">
                        </ie.ncirl.a14445618.theintelligentfoodnetwork.NonScrollListView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:id="@+id/instructionsIv"
                                android:layout_width="35dp"
                                android:layout_height="35dp"
                                android:src="@drawable/ic_steps_icon"
                                android:padding="5dp"/>

                            <TextView
                                android:layout_width="fill_parent"
                                android:layout_height="35dp"
                                android:text="@string/instructions"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:layout_toRightOf="@id/instructionsIv"
                                android:gravity="center_vertical"
                                android:layout_marginBottom="5dp"/>

                        </RelativeLayout>

                        <ie.ncirl.a14445618.theintelligentfoodnetwork.NonScrollListView
                            android:id="@+id/instructionsLv"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:divider="@null"
                            android:dividerHeight="0dp">
                        </ie.ncirl.a14445618.theintelligentfoodnetwork.NonScrollListView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <Button
                    android:id="@+id/similarRecipesBtn"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:text="Similar Recipes"
                    android:background="@color/colorPrimary"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false" />

            </LinearLayout>
    </ScrollView>
    <ListView
        android:id="@+id/navList"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left|start"
        android:background="#ffeeeeee"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>
</android.support.v4.widget.DrawerLayout>
