<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.ncirl.a14445618.theintelligentfoodnetwork.RecipesFromFoodContents"
    android:orientation="vertical">

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Please select a recipe from the list below..."
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="18sp"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--ListView Remove Divider From: https://stackoverflow.com/questions/1914477/how-do-i-remove-lines-between-listviews-on-android -->
            <ListView
                android:id="@+id/recipeListView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:divider="@null"
                android:dividerHeight="0dp">
            </ListView>

        </LinearLayout>

</LinearLayout>
