<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Custom Adapter Layout From: https://github.com/codepath/android_guides/wiki/Using-an-ArrayAdapter-with-ListView -->
    <!-- CardView with ListView From: https://stackoverflow.com/questions/30751870/can-one-use-cardview-for-listview-item-and-how -->
    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FEFEFE"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="2dp" />

            <TextView
                android:id="@+id/tvRecipeTitle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Title"
                android:textSize="15dp"
                android:gravity="center_vertical|center"
                android:textColor="@color/colorAccent"
                android:layout_toRightOf="@id/recipeImage" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>



</LinearLayout>