<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <!-- Custom Adapter Layout From: https://github.com/codepath/android_guides/wiki/Using-an-ArrayAdapter-with-ListView -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="Food Name"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/colorAccent" />


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvServingQuantity"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Serving Quantity"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:background="#DCDCDC"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueServingQuantity"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Serving Quantity Value"
                android:textColor="#000000"
                android:background="#DCDCDC"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvServingUnit"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Serving Unit"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_below="@id/tvServingQuantity"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueServingUnit"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Serving Unit Value"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvServingWeight"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Serving Weight"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:background="#DCDCDC"
                android:layout_below="@id/tvServingUnit"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueServingWeight"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Serving Weight Value"
                android:textColor="#000000"
                android:background="#DCDCDC"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvCalories"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Calories"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_below="@id/tvServingWeight"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueCalories"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Calories Value"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvTotalFat"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Total Fat"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:background="#DCDCDC"
                android:layout_below="@id/tvCalories"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueTotalFat"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Total Fat Value"
                android:textColor="#000000"
                android:background="#DCDCDC"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvSaturatedFat"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Saturated Fat"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_below="@id/tvTotalFat"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueSaturatedFat"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Saturated Fat Value"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvCholesterol"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:padding="5dp"
                android:text="Cholesterol"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:background="#DCDCDC"
                android:layout_below="@id/tvSaturatedFat"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueCholesterol"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Cholesterol Value"
                android:textColor="#000000"
                android:background="#DCDCDC"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvSodium"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Sodium"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_below="@id/tvCholesterol"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueSodium"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Sodium Value"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvCarbohydrate"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Carbohydrate"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:background="#DCDCDC"
