<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">


        <!-- Custom Adapter Layout From: https://github.com/codepath/android_guides/wiki/Using-an-ArrayAdapter-with-ListView -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/tvNutritionalFacts"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Nutritional Values"
                android:textSize="22dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvFoodName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Food Name"
                android:textSize="15dp"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Amount Per "
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvServingAmount"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/tvServingQuantity"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Serving Quantity"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:background="#DCDCDC"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueServingQuantity"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Serving Quantity Value"
                    android:textColor="#000000"
                    android:background="#DCDCDC"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvServingUnit"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Serving Unit"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_below="@id/tvServingQuantity"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueServingUnit"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Serving Unit Value"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvServingWeight"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Serving Weight"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:background="#DCDCDC"
                    android:layout_below="@id/tvServingUnit"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueServingWeight"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Serving Weight Value"
                    android:textColor="#000000"
                    android:background="#DCDCDC"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvCalories"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Calories"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_below="@id/tvServingWeight"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueCalories"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Calories Value"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvTotalFat"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Total Fat"
                    android:textAllCaps="true"
                    android:textColor="#000000"

                    android:gravity="center_vertical"
                    android:background="#DCDCDC"
                    android:layout_below="@id/tvCalories"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueTotalFat"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Total Fat Value"
                    android:textColor="#000000"
                    android:background="#DCDCDC"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvSaturatedFat"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Saturated Fat"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_below="@id/tvTotalFat"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueSaturatedFat"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Saturated Fat Value"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvCholesterol"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:text="Cholesterol"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:background="#DCDCDC"
                    android:layout_below="@id/tvSaturatedFat"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueCholesterol"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Cholesterol Value"
                    android:textColor="#000000"
                    android:background="#DCDCDC"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvSodium"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Sodium"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_below="@id/tvCholesterol"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueSodium"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Sodium Value"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvCarbohydrate"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Carbohydrate"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:background="#DCDCDC"
                    android:layout_below="@id/tvSodium"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueCarbohydrate"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Carbohydrate Value"
                    android:textColor="#000000"
                    android:background="#DCDCDC"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvFibre"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Fibre"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_below="@id/tvCarbohydrate"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueFibre"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Fibre Value"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView

                    android:id="@+id/tvSugars"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Sugars"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:background="#DCDCDC"
                    android:layout_below="@id/tvFibre"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueSugars"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Sugars Value"
                    android:textColor="#000000"
                    android:background="#DCDCDC"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvProtein"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Protein"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:layout_below="@id/tvSugars"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valueProtein"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Protein Value"
                    android:textColor="#000000"
                    android:background="@color/white"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp">

                <TextView
                    android:id="@+id/tvPotassium"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Potassium"
                    android:textAllCaps="true"
                    android:textColor="#000000"
                    android:gravity="center_vertical"
                    android:background="#DCDCDC"
                    android:layout_below="@id/tvProtein"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/valuePotassium"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:text="Potassium Value"
                    android:textColor="#000000"
                    android:background="#DCDCDC"
                    android:textAllCaps="true"
                    android:layout_below="@id/tvFoodName"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"/>

            </LinearLayout>

        </LinearLayout>


</LinearLayout>