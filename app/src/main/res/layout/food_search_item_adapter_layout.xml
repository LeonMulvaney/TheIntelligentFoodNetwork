                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueCarbohydrate"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Carbohydrate Value"
                android:textColor="#000000"
                android:background="#DCDCDC"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvFibre"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Fibre"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_below="@id/tvCarbohydrate"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueFibre"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Fibre Value"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView

                android:id="@+id/tvSugars"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Sugars"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:background="#DCDCDC"
                android:layout_below="@id/tvFibre"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueSugars"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Sugars Value"
                android:textColor="#000000"
                android:background="#DCDCDC"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvProtein"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Protein"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:layout_below="@id/tvSugars"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valueProtein"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Protein Value"
                android:textColor="#000000"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="30dp">

            <TextView
                android:id="@+id/tvPotassium"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Potassium"
                android:textAllCaps="true"
                android:textColor="#000000"
                android:gravity="center_vertical"
                android:background="#DCDCDC"
                android:layout_below="@id/tvProtein"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/valuePotassium"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:text="Potassium Value"
                android:textColor="#000000"
                android:background="#DCDCDC"
                android:textAllCaps="true"
                android:layout_below="@id/tvFoodName"
                android:layout_weight="1"
                android:gravity="right|center_vertical"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>